% Regular theorems
	% Structuring and style
	\theoremstyle{break}
	\theorembodyfont{\normalfont}
	\theoremsymbol{}
	\theoremseparator{} 	

	% Framed
	\newframedtheorem{satz}{Satz}[section]
	\newframedtheorem{lemma}[satz]{Lemma}
	\newframedtheorem{axiom}[satz]{Axiom}
	
	% Unframed	
	\newtheorem{anwendung}[satz]{Anwendung}
	\newtheorem{prop}[satz]{Proposition}
	\newtheorem{definition}[satz]{Definition}
	\newtheorem{hilfssatz}[satz]{Hilfssatz}
	\newtheorem{kor}[satz]{Korollar}
	\newtheorem{bemerkung}[satz]{Bemerkung}
	\newtheorem{beispiel}[satz]{Beispiel}
	\newtheorem{folgerung}[satz]{Folgerung}


% Proofs
	% Structuring and style
	\theoremstyle{nonumberbreak}
	\theorembodyfont{\normalfont}
	\theoremsymbol{\ensuremath{_\square}}
	\theoremseparator{} 	
	
	\newtheorem{beweis}{Beweis}


% Unnumbered theorems
	% Structuring and style
	\theoremstyle{nonumberbreak}
	\theorembodyfont{\normalfont}
	\theoremsymbol{}
	\theoremseparator{} 	
	
	\renewtheorem{satz*}{Satz}
	\renewtheorem{kor*}{Korollar}
	\renewtheorem{beispiel*}{Beispiel}
	\renewtheorem{bemerkung*}{Bemerkung}


% Simple theorems
	% Structuring and style
	\theoremstyle{nonumberbreak}
	\theorembodyfont{\normalfont}
	\theoremsymbol{}
	\theoremseparator{:}
	
	\newtheorem{vereinbarung}{Vereinbarung}
	\newtheorem{motivation}{Motivation}
	\newtheorem{schreibweise}{Schreibweise}
	\newtheorem{erinnerung}{Erinnerung}
	\newtheorem{vorbetrachtung}{Vorbetrachtung}